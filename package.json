{
  "name": "findr",
  "version": "0.0.11",
  "description": "Findr CLI â— A simple and beatiful find & replace command-line interface.",
  "license": "MIT",
  "esy": {
    "buildsInSource": "_build",
    "build": "dune build",
    "buildDev": "refmterr dune build --promote-install-files --root . --only-package #{self.name}",
    "release": {
      "bin": [
        "findr"
      ]
    },
    "buildEnv": {
      "ODOC_SYNTAX": "re"
    }
  },
  "scripts": {
    "replace": "esy x findr replace",
    "find": "esy x findr find",
    "format": "esy dune build @fmt --auto-promote",
    "doc": "esy dune build @doc",
    "publish": "./scripts/release.sh"
  },
  "dependencies": {
    "@opam/cmdliner": "*",
    "@opam/core": "*",
    "@opam/re": "*",
    "refmterr": "*",
    "@reason-native/console": "*",
    "@reason-native/pastel": "*",
    "@esy-ocaml/reason": ">= 3.6.0 < 4.0.0",
    "@opam/dune": ">=2.6",
    "@opam/inquire": "0.2.1",
    "@opam/lwt": "5.3.0",
    "ocaml": "~4.10.0"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@reason-native/rely": "*",
    "@opam/odoc": "*",
    "@opam/ocaml-lsp-server": "ocaml/ocaml-lsp:ocaml-lsp-server.opam"
  }
}
